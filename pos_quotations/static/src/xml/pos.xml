<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="CreateQuotationButton" owl="1">
        <span class="control-button js_create_so">
            <i class="fa fa-tag"></i>
            <span>Create Quotation</span>
        </span>
    </t>

    <t t-name="QuotationListButton" owl="1">
        <div class='control-button'>
           Quotation List
        </div>
    </t>

    <t t-name="QuotationLine" owl="1">
        <tr class='client-line' t-att-data-id='props.quotation.id'>
            <td><t t-esc='props.quotation.name' /></td>
            <td><t t-if="props.quotation.partner_id"><t t-esc='props.quotation.partner_id[1]' /></t></td>
            <td><t t-esc='props.quotation.create_date' /></td>
            <td><t t-esc='props.quotation.amount_total' /></td>
            <td><button t-att-data-id='props.quotation.id' t-on-click="load_quotation(props.quotation.id)">
                    <i class="fa fa-sign-out"></i> Confirm
                </button>
            </td>
        </tr>
    </t>


    <t t-name="QuotationListScreenWidget" owl="1">
        <div class="clientlist-screen screen" t-on-activate-edit-mode="activateEditMode">
            <div class="screen-content">
                <div class="top-content">
                    <div class="button back" t-on-click="back">
                        <t t-if="!env.isMobile">Discard</t>
                        <t t-else="">
                            <i class="fa fa-undo"></i>
                        </t>
                    </div>
                    <div t-if="!state.detailIsShown" class="searchbox-client top-content-center">
                        <input placeholder="Search Quotations" size="1" t-on-keyup="updateClientList" />
                        <span class="search-clear-client"></span>
                    </div>
                </div>
                <section class="full-content">
                    <div class="client-window">
                        <section class="subwindow list">
                            <div class="subwindow-container">
                                <div t-if="!state.detailIsShown" class="subwindow-container-fix scrollable-y">
                                    <table class="client-list">
                                        <thead>
                                            <tr>
                                                <th>Quotation Ref.</th>
                                                <th t-if="!env.isMobile">Partner Name</th>
                                                <th t-if="!env.isMobile">Date</th>
                                                <th>Total amount</th>
                                                <th></th>                                            
                                            </tr>
                                        </thead>
                                        <tbody class="client-list-contents">
                                            <t t-foreach="clients" t-as="quotation"
                                               t-key="quotation.id">
                                                <QuotationLine quotation="quotation"
                                                            selectedClient="state.selectedClient"
                                                            detailIsShown="state.detailIsShown"
                                                            t-on-click-client="clickClient" />
                                            </t>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </section>
                    </div>
                </section>
            </div>
        </div>
    </t>
    <t t-name="QuotationBillScreenWidget" owl="1">
        <div class="receipt-screen screen">
            <div class="screen-content">
                <div class="top-content">
                    <div class="top-content-center">
                        <h1>Bill Printing</h1>
                    </div>
                    <span class="button next highlight" t-on-click="confirm">
                        <span>Ok</span>
                        <span> </span>
                        <i class="fa fa-angle-double-right"></i>
                    </span>
                </div>
                <div class="centered-content">
                    <div class="button print" t-on-click="printReceipt">
                        <i class="fa fa-print"></i>
                        <span> </span>
                        <span>Print</span>
                    </div>
                    <div class="pos-receipt-container">
                        <OrderReceipt order="currentOrder" isBill="true"/>
                    </div>
                </div>
            </div>
        </div>
    </t>


    <t t-name="CreateSaleOrderPopupWidget" owl="1">
        <div role="dialog" class="modal-dialog">
            <Draggable>
                <div class="popup">
                    <header class="title drag-handle">
                        <t t-esc="props.title" />
                    </header>
                    <div>
                       <p style="margin: 7px;margin-left: 37px;font-size: 17px;font-style: italic;float: left;">Enter your note.</p>
                        <textarea class="wv_note" rows="4" cols="40" placeholder="Enter your note........" t-model="state.inputValue" t-ref="input" name="note"></textarea>
                
                    </div>
                    <footer class="footer centered">
                        <div class="button cancel" t-on-mousedown.prevent="cancel">
                            <t t-esc="props.cancelText" />
                        </div>
                        <div class="button"  t-on-click="captureChange" >
                            <t t-esc="props.confirmText" />
                        </div>
                        <div class="button"  t-on-click="print_quotation_bill">
                            Save/Print 
                        </div>
                    </footer>
                </div>
            </Draggable>

        </div>
    </t>


    <t t-name="OrderReceipt" t-inherit="point_of_sale.OrderReceipt" t-inherit-mode="extension" owl="1">
        <xpath expr="//div[hasclass('after-footer')]" position="before">
            <t t-if="receipt.quotation_id">
                Quotation Ref: <t t-esc="receipt.quotation_id"/>
            </t>
            <br/>
            <t t-if="receipt.wv_note">
                Note: <t t-esc="receipt.wv_note"/>
            </t>
        </xpath>
    </t>
</templates>
